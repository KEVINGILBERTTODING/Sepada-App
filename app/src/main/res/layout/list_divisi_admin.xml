<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                app:contentPadding="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                android:layout_width="@dimen/_60sdp"
                app:cardBackgroundColor="@color/main"
                android:layout_height="wrap_content"
                android:background="@color/main">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:tint="@color/white"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/baseline_work_24"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toLeftOf="@id/lrButtonMenu"
                android:layout_toRightOf="@id/cv2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:textColor="@color/main"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvDivisi"
                    android:textSize="@dimen/_11ssp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/lrButtonMenu"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"/>




            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>