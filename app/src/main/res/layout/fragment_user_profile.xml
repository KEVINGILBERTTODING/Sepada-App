<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSimpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Simpan"
                android:visibility="gone"
                android:fontFamily="@font/popsem"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/main"/>


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivProfile"
                android:layout_width="@dimen/_80sdp"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_80sdp"
                android:src="@color/main"
                app:civ_border_width="@dimen/_3sdp"
                app:civ_border_color="@color/yellow"/>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:text="Syahrul"
                android:fontFamily="@font/popsem"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/main"/>

            <TextView
                android:id="@+id/tvInstansi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="DPRD Jawa Tengah"
                android:fontFamily="@font/popmed"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tvJabatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Staff Keuangan"
                android:fontFamily="@font/popmed"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/gray"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:columnCount="2"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:rowCount="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="@dimen/_130sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_column="0"
                            android:background="@drawable/container_spinner"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ivIn"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_in"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@id/ivIn">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popsem"
                                    android:textSize="@dimen/_15ssp"
                                    android:text="23"
                                    android:textColor="@color/main"
                                    android:id="@+id/tvTotalPengajuan"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popmed"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="Total Tamu"
                                    android:textColor="@color/gray"
                                    />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/_130sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_column="1"
                            android:background="@drawable/container_spinner"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ivCheck"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_checklist"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@id/ivCheck">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popsem"
                                    android:textSize="@dimen/_15ssp"
                                    android:text="23"
                                    android:textColor="@color/main"
                                    android:id="@+id/tvTotalSetuju"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popmed"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="Total Diterima"
                                    android:textColor="@color/gray"
                                    />
                            </LinearLayout>
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:columnCount="2"
                        android:layout_gravity="center"
                        android:rowCount="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="@dimen/_130sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_column="0"
                            android:background="@drawable/container_spinner"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ivCancel"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_times"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@id/ivCancel">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popsem"
                                    android:textSize="@dimen/_15ssp"
                                    android:text="23"
                                    android:textColor="@color/main"
                                    android:id="@+id/tvTotalTolak"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popmed"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="Total Ditolak"
                                    android:textColor="@color/gray"
                                    />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/_130sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_column="1"
                            android:background="@drawable/container_spinner"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ivProccess"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_process"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@id/ivProccess">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popsem"
                                    android:textSize="@dimen/_15ssp"
                                    android:text="23"
                                    android:textColor="@color/main"
                                    android:id="@+id/tvTotalProccess"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/popmed"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="Total Diproses"
                                    android:textColor="@color/gray"
                                    />
                            </LinearLayout>
                        </RelativeLayout>


                    </LinearLayout>



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:id="@+id/menuUbahDataPengajuan"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/container_spinner"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ubah Data Pengajuan"
                                android:fontFamily="@font/popmed"
                                android:textColor="@color/main"/>
                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/baseline_keyboard_arrow_right_24"
                                android:layout_height="@dimen/_20sdp"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:id="@+id/menuUbahProfile"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/container_spinner"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ubah Username dan Password"
                                android:fontFamily="@font/popmed"
                                android:textColor="@color/main"/>
                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/baseline_keyboard_arrow_right_24"
                                android:layout_height="@dimen/_20sdp"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:id="@+id/menuLogOut"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/container_spinner"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Keluar"

                                android:fontFamily="@font/popmed"
                                android:textColor="@color/main"/>
                            <ImageView
                                android:id="@+id/ivArrow"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/baseline_keyboard_arrow_right_24"
                                android:layout_height="@dimen/_20sdp"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>









                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>


    </RelativeLayout>



</layout>
