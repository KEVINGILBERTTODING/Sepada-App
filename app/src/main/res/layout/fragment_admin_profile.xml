<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSimpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Simpan"
                android:visibility="gone"
                android:fontFamily="@font/popsem"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/main"/>


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivProfile"
                android:layout_width="@dimen/_80sdp"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_80sdp"
                android:src="@color/main"
                app:civ_border_width="@dimen/_3sdp"
                app:civ_border_color="@color/yellow"/>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:text="Syahrul"
                android:fontFamily="@font/popsem"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/main"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="DPRD Jawa Tengah"
                android:fontFamily="@font/popmed"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/gray"/>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:id="@+id/menuUbahProfile"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/container_spinner"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ubah Username dan Password"
                                android:fontFamily="@font/popmed"
                                android:textColor="@color/main"/>
                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/baseline_keyboard_arrow_right_24"
                                android:layout_height="@dimen/_20sdp"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:id="@+id/menuLogOut"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/container_spinner"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Keluar"

                                android:fontFamily="@font/popmed"
                                android:textColor="@color/main"/>
                            <ImageView
                                android:id="@+id/ivArrow"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/baseline_keyboard_arrow_right_24"
                                android:layout_height="@dimen/_20sdp"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>









                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>


    </RelativeLayout>



</layout>
